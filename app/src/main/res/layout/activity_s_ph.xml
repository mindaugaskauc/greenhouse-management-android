<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".s_ph">

    <!-- TODO: Update blank fragment layout -->
    <!-- ph vietoj temp -->
    <TextView
        android:id="@+id/s_ph"
        android:layout_width="335dp"
        android:layout_height="159dp"
        android:layout_marginTop="56dp"
        android:fontFamily="times-new roman"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:textSize="100sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.592"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_set_s_ph"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:text="NUSTATYTI"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/s_ph_lowLimitNumberDecimal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.485" />

    <EditText
        android:id="@+id/s_ph_highLimitNumberDecimal"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="28dp"
        android:ems="10"
        android:fontFamily="times-new roman"
        android:inputType="numberDecimal"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/s_ph_lowLimit"
        app:layout_constraintTop_toBottomOf="@+id/s_ph_lowLimitNumberDecimal"
        app:layout_constraintVertical_bias="0.028" />

    <TextView
        android:id="@+id/s_ph_highLimit"
        android:layout_width="100dp"
        android:layout_height="19dp"
        android:layout_marginTop="28dp"
        android:fontFamily="times-new roman"
        android:text="@string/max_ph"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.110"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/s_ph_lowLimit" />

    <TextView
        android:id="@+id/s_ph_lowLimit"
        android:layout_width="100dp"
        android:layout_height="19dp"
        android:fontFamily="times-new roman"
        android:text="@string/min_ph"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.110"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.452" />

    <EditText
        android:id="@+id/s_ph_lowLimitNumberDecimal"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:ems="15"
        android:fontFamily="times-new roman"
        android:includeFontPadding="true"
        android:inputType="numberDecimal"
        android:textSize="12sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/s_ph_highLimit"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.452" />

</androidx.constraintlayout.widget.ConstraintLayout>